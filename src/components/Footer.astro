---
import config from "../content/config/config.json";
import IconLink from "./react/IconLink";
const today = new Date();
---
<div class="koop-footer">
	<div class="koop-banner-content">
		<img src="/kadikoy-koop-logo.png" alt="Kadıköy Kooperatifi Logo" />
		<span>Kadıköy Kooperatifi Arşivi - Kooperatifçilik Deneyimleri</span>
	</div>
</div>
	<footer class="copyright-footer">
		&copy; {today.getFullYear()}
		{config.seo.siteOwner}. Tüm hakları saklıdır.
		<div class="social-links">
			{
				config?.contactLinks?.map((link) => {
					return (
						<IconLink {...link} />
					);
				})
			}
		</div>
	</footer>

<style>

	.copyright-footer {
		padding: 2em 1em 2em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}

	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}

	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}

	.koop-footer {
		display: flex;
		justify-content: center;
		position: relative;
		width: 100%;
		overflow: hidden;
		background-image: linear-gradient(60deg, #1a4d2e 0%,  #4ade80 50%, #1a4d2e 100%);
		padding: 1.5em 0;
	}

	.koop-banner-content {
		display: flex;
		align-items: center;
		gap: 1em;
		font-size: 1.2em;
		position: relative;
		z-index: 2;
		color: white;
		font-weight: bold;
	}

	.koop-footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: -50%;
		width: 200%;
		height: 100%;
		background-image: linear-gradient(60deg, #1a4d2e 25%,   #4ade80 50%, #1a4d2e 75%);
		transition: transform 1s ease-in-out;
		z-index: 1;
	}

	.koop-footer:has(.koop-banner-content:hover)::before {
		transform: scaleX(2);
	}

	.koop-banner-content img {
		width: 60px;
		height: auto;
	}

	@media (max-width: 720px) {
		.koop-banner-content {
			flex-direction: column;
			text-align: center;
			font-size: 1em;
		}
		
		.koop-banner-content img {
			width: 40px;
		}
	}
</style>
